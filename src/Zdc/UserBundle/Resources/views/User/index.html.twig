{% extends 'layout.html.twig' %}

{% block body %}
{{parent()}}
<div class="container">
		<div class="col-md-12">
			<div class="page-header margin-none">
				<h2 class="padding-none">Users</h2>
			</div>
			<div class="table-responsive">
			<table class="table table-striped table-hover">
<thead>
<tr>
<th>Username</th>
<th>Nombres</th>
<th>Apellidos</th>
<th>Email</th>
<th>Role</th>
<th>Acciones</th>
</thead>
<tbody>
{%  for user in users %}

<tr>
<td>{{user.username}}</td>
<td> {{user.firtsName}} </td>
<td> {{user.lastName}} </td>
<td> {{user.email}} </td>
<td> {% if user.role =='ROLE_ADMIN'  %}
	 <strong>Administrador</strong>
	 {% elseif user.role =='ROLE_USER'%}
	 <strong>Usuario</strong>
	  {% endif %}
</td>

<td> <a href="{{path('zdc_user_view',{id: user.id})}}"  class="btn btn-info"> Ver </a> 
     <a href="{{path('zdc_user_edit',{id: user.id})}}"  class="btn btn-success"> Editar </a>


     </td>
</tr>
{% endfor %}
</tbody>
</table>

{% endblock%}