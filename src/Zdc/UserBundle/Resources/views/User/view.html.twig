{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container well">
        <div class="col-md-9">
        <h2>{{ user.firtsName }}  {{ user.lastName }}</h2>
            <br>
            <dl>
                <dt>Usuario</dt>
                <dd>
                    {{ user.username }}  

                </dd>
                <br>

               <dt>Nombres:</dt>
                <dd>
                    {{ user.firtsName }}  
                </dd>
                <br>

                <dt>Apellidos:</dt>
                <dd>
                    {{ user.lastName }}  
                </dd>
                <br>

                <dt>Email:</dt>
                <dd>
                    {{ user.email }}  
                </dd>
                <br>
 
                <dt>Role:</dt>
                <dd>
                    {% if user.role == 'ROLE_ADMIN' %}
                    <strong> Administrador</strong>
                    {% elseif user.role == 'ROLE_USER' %}
                    <strong> Usuario</strong>
                    {% endif %}
                    
                </dd>
                <br>

                <dt>Activo:</dt>
                <dd>
                    {% if user.isActive == 1 %}
                    <span class="text-success"> Habilitado </span>
                    {% elseif user.isActive == 0 %}
                    <span class="text-success"> Deshabilitado </span>
                    {% endif %}      
                </dd>
                <br>
            </dl>
 </div> 
            <div class="col-md-3">
                <h3>Acciones</h3>
                <p>
                <a href="{{ path('zdc_user_edit' , {id: user.id} )}}" class="btn btn-primary  lg-btn btn-block ">
                <span class="glyphicon glyphicon-edit"></span>
                Editatr Usuario
            </a>
            </p>

          <p>
            {{ include('ZdcUserBundle:User:forms/form.html.twig',{form: delete_form})}}

            </p>
        </div>

            </div>

         
    </div>
{% endblock %}